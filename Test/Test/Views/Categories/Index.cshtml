@model List<Categories>
<partial name="_Notification"/>


<div class="container">
<div class="row pt-4 pb-3">
    <div class="col-6">
        <h2 class="text-primary">

            Category List
        </h2>
    </div>
    <div class="col-6 text-end">
       <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Category
        </a>
    </div>
</div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Actions</th> <!-- Added a header for actions -->
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Categories" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-fill"></i> Edit
                        </a>

                        <a asp-controller="Categories" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


